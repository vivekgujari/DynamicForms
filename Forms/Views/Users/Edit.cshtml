@model Forms.Models.Users

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Edit form</h2>
<form method="post" action="@Url.Action("Save", "Users")">
    <div class="form-group row">
        <label for="fname" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" id="fname" name="FirstName" placeholder="@Model.FirstName" />
        </div>
    </div>
    <div class="form-group row">
        <label for="lname" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" id="lname" name="LastName" placeholder="@Model.LastName" />
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" id="email" name="Email" placeholder="@Model.Email" />
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" id="password" name="Password" placeholder="@Model.Password" />
        </div>
    </div>
    @Html.HiddenFor(m => m.Id);
    <button type="submit" class="btn btn-primary">Update</button>
</form>
